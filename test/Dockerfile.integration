# 使用稳定的 Go 镜像
FROM golang:1.21-alpine AS builder

# 设置工作目录
WORKDIR /app

# 复制源代码
COPY ./integration .

# 构建测试二进制文件
RUN go mod download && \
    GOOS=linux go build -a -o integration-test ./

# 运行阶段 - 使用稳定的 Alpine 镜像
FROM alpine:3.17

# 安装运行时依赖和数据库客户端工具
RUN apk add --no-cache ca-certificates bash \
    mysql-client postgresql-client

# 设置工作目录
WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /app/integration-test .
COPY --from=builder /app/run-single-db-test.sh .

# 设置权限
RUN chmod +x ./run-single-db-test.sh ./integration-test

# 创建报告目录
RUN mkdir -p /app/reports

# 默认命令
CMD ["./run-single-db-test.sh"]