FROM golang:1.21-alpine

# 安装必要的工具
RUN apk add --no-cache git make

# 设置工作目录
WORKDIR /app

# 复制 go mod 文件
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 构建测试
RUN go build -o /tmp/integration-test ./test/cmd/integration/

# 运行测试
CMD ["go", "test", "-v", "./test/integration/..."]