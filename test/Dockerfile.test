FROM golang:1.21-alpine

# 安装必要的工具
RUN apk add --no-cache \
    git \
    curl \
    bash \
    mysql-client \
    postgresql-client \
    redis \
    mongodb-tools

# 设置工作目录
WORKDIR /app

# 复制go.mod和go.sum
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 构建测试二进制文件
RUN go build -o bin/batchsql-test ./test/cmd/integration

# 安装测试工具
RUN go install github.com/onsi/ginkgo/v2/ginkgo@latest
RUN go install github.com/rakyll/hey@latest

# 设置执行权限
RUN chmod +x test/scripts/*.sh

CMD ["./test/scripts/run-integration-tests.sh"]